<%= stylesheet_link_tag 'shopping_centers', :media => 'all' %>
<div class="container-fluid">
    <div class="row">
    	<div class="col-xs-12 cover-img" style="background-image:url('https://publicdomainq.net/images/201801/25s/publicdomainq-0018195xbz.jpg');">
    		<div class="cover-text text-right">
    			<p style="color: black; ">One <br> Place <br> Shopping</p>
    		</div>
    	</div>
    </div>
        
    <div class="mb-8">
        <div class="mt-5  text-center">
            <h1>～検索ページ～</h1>
            <div class="mt-5 mb-5">
                <h2>あなたの行きたい店リスト</h2>
            </div>
        </div>
        
        <div class="search_form offset-sm-4 col-sm-6 ">
            <%= form_with url: search_shopping_centers_path, local: true, method: :get do |f| %>
                <div class="form-control-lg mb-5">
                    <%= f.label :name1, '１.' %>
                    <%= f.text_field :name1 %>
                </div>
                <div class="form-control-lg mb-5">
                    <%= f.label :name2, '２.' %>
                    <%= f.text_field :name2 %>
                </div>
                <div class="form-control-lg mb-5">
                    <%= f.label :name3, '３.' %>
                    <%= f.text_field :name3 %>
              　</div>
              　<div class="form-button col-form-label-lg ml-5" style="background: #f16272; border-radius: 10px; width:230px; text-align: center; ">
                    <%= f.submit '検索', class: 'btn ',style: "font-size: 20px;" %>
                </div>
            <% end %>
        </div>
        
    </div>
    
    <div>
        <div class="mt-8 mb-5 text-center">
            <h1>～ショッピングモール情報～</h1>
        </div>
        <div class="mb-7 text-center">
            <table class="table">
                <thead>
                    <tr><th><h2>ショッピングモール名</h2></th></tr>
                </thead>
              
                
                <tbody>
                    <% @shopping_center.each do |shopping_center| %>
                        <tr><td style="font-size: 20px;"><%= link_to shopping_center.name, shopping_center_path(shopping_center) %></td></tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>