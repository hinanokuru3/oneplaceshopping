<%= stylesheet_link_tag 'shopping_centers', :media => 'all' %>
<div class="container-fluid">
    <div class="row">
    	<div class="col-xs-12 cover-img" style="background-image:url('https://publicdomainq.net/images/201801/25s/publicdomainq-0018195xbz.jpg');">
    		<div class="cover-text text-right">
    			<p style="color: black; ">One <br> Place <br> Shopping</p>
    		</div>
    	</div>
    </div>
    
    <div>
        <div class="mt-5 mb-5 text-center"> 
            <h1>～ショッピングモール情報～</h1>
        </div>
        <table class="table mb-5">
            <tr><td>ショッピングモール名</td><td><%= @shopping_center.name %></td></tr>
         　 <tr><td>住所</td><td><%= @shopping_center.address %></td></tr>
            <tr><td>駐車場</td><td><%= @shopping_center.parking_area %></td></tr>
        </table>
    </div>
    
    <div>
        <table class="table mt-5 mb-5">
            <thead><tr><th>店舗一覧</th></tr></thead>
            <tbody>
                <% @shopping_center.shops.each do |shop| %>
                    <td><%= link_to shop.name, shop_path(shop) %></td>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

    
