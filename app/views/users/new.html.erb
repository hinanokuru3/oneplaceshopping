<%= stylesheet_link_tag 'signup', :media => 'all' %>

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 cover-img" style="background-image:url('https://publicdomainq.net/images/201801/25s/publicdomainq-0018195xbz.jpg');">
		    <div class="cover-text text-right">
			    <p style="color: black; ">One <br> Place <br> Shopping</p>
			</div>
	    </div>
	</div>
	
	<div class="form-wrapper">
        <h1>Sign Up</h1>
        <form>
            <div class="form-item">
                <label for="name"></label>
                <input type="name" name="name" required="required" placeholder="Name"></input>
            </div>
            <div class="form-item">
                <label for="email"></label>
                <input type="email" name="email" required="required" placeholder="Email Address"></input>
            </div>
            <div class="form-item">
                <label for="password"></label>
                <input type="password" name="password" required="required" placeholder="Password"></input>
            </div>
            <div class="form-item">
                <label for="password_confirmation"></label>
                <input type="password" name="password_confirmation" required="required" placeholder="Password Confirmation"></input>
            </div>
            <div class="button-panel">
                <input type="submit" class="button" title="Sign Up" value="Sign Up"></input>
            </div>
        </form>
        <div class="form-footer">
        </div>
    </div>
</div>
	   